<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="hole_style">
        <item name="android:layout_width">@dimen/hole_size</item>
        <item name="android:layout_height">@dimen/hole_size</item>
        <item name="android:layout_margin">@dimen/large_margin</item>
        <item name="android:background">@drawable/hole</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="big_text_font_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/sunny_spells_regular</item>
        <item name="android:textSize">@dimen/very_big_text_size</item>
        <item name="android:textColor">@color/colorYellow</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
    </style>

    <style name="big_btn_style">
        <item name="android:backgroundTint">@color/colorYellow</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sunny_spells_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:layout_width">@dimen/standart_button_width</item>
        <item name="android:layout_margin">@dimen/normal_margin</item>
        <item name="android:layout_height">@dimen/standart_button_height</item>
    </style>

    <style name="splashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_height">@dimen/icob_height</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>
</resources>